{
  "name": "@exility/ui-bootstrap",
  "version": "0.1.0",
  "description": "Exility UI Bootstrap",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "npm run storybook",
    "storybook": "exility-storybook start -p 5111",
    "build-storybook": "exility-storybook build",
    "ts-build": "tsc",
    "ts-clean": "git clean -f",
    "prepublish-only": "npm run test && npm run ts-build",
    "prepublish": "[ -f index.js ] || npm run prepublish-only",
    "postpublish": "npm run ts-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "author": "RubaXa <ibnRubaXa@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.28",
    "awesome-typescript-loader": "^3.1.3",
    "ibi": "^0.3.0",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "tx-reflector": "^0.3.0",
    "typescript": "^2.4.1",
    "@exility/block": "*",
    "@exility/dom": "*",
    "@exility/storybook": "*",
    "@exility/jacket": "*",
    "@exility/ts-transformer": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/__jest__/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "setupFiles": [
      "<rootDir>/__jest__/regression.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/css.ts"
    }
  }
}
