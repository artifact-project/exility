{
  "name": "@exility/jacket",
  "version": "0.1.0",
  "description": "Exility Jacket is a testing utility for your blocks.",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "ts-build": "tsc",
    "ts-clean": "git clean -f",
    "prepublish-only": "npm run test && npm run ts-build",
    "prepublish": "[ -f index.js ] || npm run prepublish-only",
    "postpublish": "npm run ts-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "author": "RubaXa <ibnRubaXa@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "typescript": "^2.4.0"
  },
  "peerDependencies": {
    "@exility/compile": "*",
    "@exility/ts-transformer": "*",
    "@exility/block": "*",
    "@exility/dom": "*",
    "@exility/stdlib": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/__jest__/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
