{
  "name": "@exility/ts-transformer",
  "version": "0.1.0",
  "description": "TypeScript transformer for Exility",
  "main": "index.js",
  "bin": {
    "exility-tsc": "./bin/tsc.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "ts-build": "tsc",
    "git-clean": "git clean -f",
    "prepublish": "npm run test && npm run ts-build",
    "postpublish": "npm run git-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "bin/*.js",
    "bin/*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "author": "RubaXa <ibnRubaXa@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@exility/dom": "*",
    "@exility/string": "*",
    "@exility/stdlib": "*",
    "glob": "^7.1.2"
  },
  "peerDependencies": {
      "typescript": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
