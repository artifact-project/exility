{
  "name": "@exility/dom",
  "version": "0.1.0",
  "description": "Exility DOM",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --collectCoverageFrom=src/compiler/*.ts",
    "ts-build": "tsc",
    "git-clean": "git clean -f",
    "prepublishOnly": "npm run test && npm run ts-build",
    "postpublish": "npm run git-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "author": "RubaXa <ibnRubaXa@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@exility/block": "*",
    "@exility/compile": "*",
    "@exility/parser": "*",
    "@exility/stdlib": "*",
    "@exility/string": "*",
    "@types/jest": "^23.3.3",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
